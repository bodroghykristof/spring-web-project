<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <!--  The filename corresponds to the name of the servlet defined in web.xml -->

    <!--  With the 2 lines below we tell Spring MVC where to look for classes annotated with @Controller -->
    <!--  Note: we do not need to create an application context for this manually -->

    <context:annotation-config/>
    <context:component-scan base-package="hu.vemsoft.web.controller" />

</beans>